<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B232F"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66393939"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection Made!"
                android:paddingTop="30dp"

                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="42sp"

                />

            <ImageView
                android:id="@+id/investorImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/founderImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_margin="20dp"
                    android:id="@+id/investorMatchIcon"
                    android:background="@drawable/green_ring"
                    android:layout_height="80dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/red_ring"
                    android:id="@+id/founderMatchIcon"
                    android:layout_height="80dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link up with a short video call!"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="#4B9B26"
                android:text="Call Now"
                android:textSize="20dp"
                android:textColor="#FFFFFF" />
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="#8A8B89"
                android:textColor="#FFFFFF"
                android:text="Schedule For Later"
                android:textSize="20dp"
                />


        </LinearLayout>

    </LinearLayout>


</FrameLayout>
